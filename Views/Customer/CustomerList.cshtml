
@{
    ViewBag.Title = "CustomerList";
}

<h2>Customer List</h2>

<!-- Table to display all customers -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Date Joined</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>@customer.DateJoined.ToString("yyyy-MM-dd")</td>
                <td>
                    <!-- Edit and Delete actions -->
                    <a href="@Url.Action("EditCustomer", "Customer", new { id = customer.CustomerId })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("CustomerDetails", "Customer", new { id = customer.CustomerId })" class="btn btn-secondary">Details</a>
                    <a href="@Url.Action("DeleteCustomer", "Customer", new { id = customer.CustomerId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Link to create a new customer -->
<a href="@Url.Action("Create", "Customer")" class="btn btn-success">Create New Customer</a>
