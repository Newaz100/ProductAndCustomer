
@{
    ViewBag.Title = "CreateProduct";
}

<h1>Create New Product</h1>

<!-- Product creation form -->
@using (Html.BeginForm("CreateProduct", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" name="Name" class="form-control" id="Name" placeholder="Enter product name" value="@Model" />
        <span class="text-danger">@Html.ValidationMessage("Name")</span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea name="Description" class="form-control" id="Description" placeholder="Enter product description">@Model</textarea>
        <span class="text-danger">@Html.ValidationMessage("Description")</span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" step="0.01" name="Price" class="form-control" id="Price" placeholder="Enter product price" value="@Model" />
        <span class="text-danger">@Html.ValidationMessage("Price")</span>
    </div>

    <div class="form-group">
        <label for="StockQuantity">Stock Quantity</label>
        <input type="number" name="StockQuantity" class="form-control" id="StockQuantity" placeholder="Enter stock quantity" value="@Model" />
        <span class="text-danger">@Html.ValidationMessage("StockQuantity")</span>
    </div>

    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" name="Category" class="form-control" id="Category" placeholder="Enter product category" value="@Model" />
        <span class="text-danger">@Html.ValidationMessage("Category")</span>
    </div>

    <button type="submit" class="btn btn-primary">Create Product</button>
}

<a href="@Url.Action("ProductList", "Product")" class="btn btn-secondary">Back to Product List</a>

