
@{
    ViewBag.Title = "EditProduct";
}

<h1>Edit Product</h1>

<!-- Product editing form -->
@using (Html.BeginForm("EditProduct", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="ProductId" value="@Model.ProductId" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" name="Name" class="form-control" id="Name" value="@Model.Name" />
        <span class="text-danger">@Html.ValidationMessage("Name")</span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea name="Description" class="form-control" id="Description">@Model.Description</textarea>
        <span class="text-danger">@Html.ValidationMessage("Description")</span>
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" step="0.01" name="Price" class="form-control" id="Price" value="@Model.Price" />
        <span class="text-danger">@Html.ValidationMessage("Price")</span>
    </div>

    <div class="form-group">
        <label for="StockQuantity">Stock Quantity</label>
        <input type="number" name="StockQuantity" class="form-control" id="StockQuantity" value="@Model.StockQuantity" />
        <span class="text-danger">@Html.ValidationMessage("StockQuantity")</span>
    </div>

    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" name="Category" class="form-control" id="Category" value="@Model.Category" />
        <span class="text-danger">@Html.ValidationMessage("Category")</span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
}

<a href="@Url.Action("ProductList", "Product")" class="btn btn-secondary">Back to Product List</a>

