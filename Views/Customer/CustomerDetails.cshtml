
@{
    ViewBag.Title = "CustomerDetails";
}

<h1>Customer Details</h1>

<div class="well">
    
    <table class="table">
        <tr>
            <th>First Name</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Date Joined</th>
            <td>@Model.DateJoined.ToString("yyyy-MM-dd")</td>
        </tr>
    </table>

    <div>
        <a href="@Url.Action("EditCustomer", "Customer", new { id = Model.CustomerId })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("CustomerList", "Customer")" class="btn btn-secondary">Back to Customer List</a>
    </div>
</div>