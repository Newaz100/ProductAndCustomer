
@{
    ViewBag.Title = "DeleteCustomer";
}

<h2>Delete Customer</h2>
<div class="alert alert-danger">
    <h4>Are you sure you want to delete this customer?</h4>
    <p>
        Customer: @Model.FirstName @Model.LastName
        <br />
        Email: @Model.Email
        <br />
        Phone: @Model.Phone
        <br />
        Address: @Model.Address
    </p>

    @using (Html.BeginForm("DeleteCustomer", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("CustomerList", "Customer")" class="btn btn-secondary">Cancel</a>
    }
</div>

