
@{
    ViewBag.Title = "ProductList";
}

<h2>Product List</h2>


<!-- Table to display all products -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.StockQuantity</td>
                <td>@product.Category</td>
                <td>
                    <!-- Edit and Delete actions -->
                    <a href="@Url.Action("EditProduct", "Product", new { id = product.ProductId })" class="btn btn-primary">Edit</a> 
                    <a href="@Url.Action("ProductDetails", "Product", new { id = product.ProductId })" class="btn btn-secondary">Details</a>
                    <a href="@Url.Action("DeleteProduct", "Product", new { id = product.ProductId })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Link to create a new product -->
<a href="@Url.Action("CreateProduct", "Product")" class="btn btn-success">Add New Product</a>

